<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.OffaccountFragment">
    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:id="@+id/offaccount_tab_layout"
        app:tabBackground="@color/white"
        app:tabIndicatorColor="@color/menu_bule"
        app:tabIndicatorHeight="1dp"
        app:tabMode="scrollable"
        app:tabMinWidth="40dp"
        app:tabPaddingStart="5dp"
        app:tabPaddingEnd="5dp"
        app:tabSelectedTextColor="@color/menu_bule"
        app:tabTextAppearance="@style/tab_head"
        app:tabTextColor="@color/wx_head_default"/>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/offaccount_view_pages"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@color/white"/>
</LinearLayout>