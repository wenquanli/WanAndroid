<?xml version="1.0" encoding="utf-8"?>
<paths>
    <!--隐藏标签，对应DEVICE_ROOT指向的整个存储的根路径-->
    <root-path
        name="root"
        path="" />
    <!--对应内部内存卡根目录：Context.getFileDir()-->
    <files-path
        name="app_file"
        path="/" />
    <!--对应应用默认缓存根目录：Context.getCacheDir()-->
    <cache-path
        name="app_cache"
        path="/" />
    <!--对应外部内存卡根目录：Environment.getExternalStorageDirectory()-->
    <external-path
        name="ext_root"
        path="/Android/data/com.openlanguage.kaiyan/" />
    <!--对应外部内存卡根目录下的APP公共目录：Context.getExternalFileDir(String)-->
    <external-files-path
        name="ext_file"
        path="/" />
    <!--对应外部内存卡根目录下的APP缓存目录：Context.getExternalCacheDir()-->
    <external-cache-path
        name="ext_cache"
        path="/" />
</paths>